<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.sonnychen.aviationhk"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-sdk
        android:minSdkVersion="23"
        android:targetSdkVersion="25"/>

    <application
        android:name="com.sonnychen.aviationhk.BaseApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_windsock_color"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_windsock_color"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.sonnychen.aviationhk.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.sonnychen.aviationhk.LightboxActivity"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:label="@string/app_name">
        </activity>
    </application>

</manifest>